{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"all": true
			},
			"performance": {
				"all": true
			},
			"recommended": true,
			"a11y": {
				"all": true
			},
			"security": {
				"all": true
			},
			"style": {
				"all": true
			},
			"suspicious": {
				"all": true
			},
			"complexity": {
				"all": true
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
